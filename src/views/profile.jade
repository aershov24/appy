extends ./layout.jade

block css
  link(rel='stylesheet', href='/css/jquery.json-viewer.css')

block js
  script(src='/libs/profile.js')
  //script(src='https://google-code-prettify.googlecode.com/svn/loader/run_prettify.js')
  script(src='/libs/jquery.json-viewer.js')
  script.
    var user=!{JSON.stringify(user)}

block body
  body
    include ./navbar.jade
    .container
      ol.breadcrumb
        li
          label USERS
        li
          a(href='/profile') #{user.username}
      p
        h1 User: #{user.username}
      .row
        .col-md-6
          p
            h1 ACL
          p
            ul
              li
                a#ManageUsers Manage Users
              li
                a#ManageMessages Manage Messages
              li
                a#AddUserRole Add user role
              li
                a#DeleteUserRole Delete user from role
              li
                a#GetUserRoles Get user roles
              li
                a#AllowPermission Set permission to resource
              li
                a#RemovePermission Delete permission to resource
              li
                a#RemoveRole Remove role
              li
                a#RemoveResource Remove resource
              li
                a#WhatResources What resources allowed
          p
            h1 Emails
          p
            ul
              li
                a#SendRawEmail Send raw email
              li
                a#SendWelcomeEmail Send welcome email
              li
                a#SendEmailWithAttachments Send email with attachments
          p
            h1 SMS messages
          p
            ul
              li 
                a#SendSMSMessage Send sms message
          p
            h1 Facebook messages
          p
            ul
              li 
                a#FacebookPostOnWall Post on user's wall
              li 
                a#FacebookSendNotification Send notification
          p
            h1 Twitter messages
          p
            ul
              li 
                a#TwitterPostOnWall Post on user's wall
          p
            h1 LinkedIn messages
          p
            ul
              li 
                a#LinkedInPostOnWall Post on user's wall
        .col-md-6
          p
            h1 Foursquare
          p
            ul
              li 
                a#SearchFoursquareVenues Search venues
              li 
                a#GetFoursquareVenuewDetails Get venue details
              li 
                a#GetFoursquareVenueTips Get venue tips
          p
            h1 Locu
          p
            ul
              li 
                a#SearchLocuVenues Search venues
              li 
                a#GetLocuVenuewDetails Get venue details
          p
            h1 Linking accounts
          p
            ul
              li 
                h4 Facebook
                ul
                  li 
                    a(href='/auth/facebook/link?token=#{user.token}') Link Facebook Account
                  li 
                    a#UnlinkFacebookAccount Unlink Facebook Account
              li 
                h4 Twitter
                ul
                  li 
                    a(href='/auth/twitter/link?token=#{user.token}') Link Twitter
                  li 
                    a#UnlinkTwitterAccount Unlink Twitter Account
              li 
                h4 LinkedIn
                ul
                  li 
                    a(href='/auth/linkedin/link?token=#{user.token}') Link LinkedIn Account
                  li 
                    a#UnlinkLinkedInAccount Unlink LinkedIn Account
              li 
                h4 Instagram
                ul
                  li 
                    a(href='/auth/instagram/link?token=#{user.token}') Link Instagram Account
                  li 
                    a#UnlinkInstagramAccount Unlink Instagram Account
              li 
                h4 Foursquare
                ul
                  li 
                    a(href='/auth/foursquare/link?token=#{user.token}') Link Foursquare Account
                  li 
                    a#UnlinkFoursquareAccount Unlink Foursquare Account
              li 
                h4 Google+
                ul
                  li 
                    a(href='/auth/google/link?token=#{user.token}') Link Google+ Account
                  li 
                    a#UnlinkGoogleAccount Unlink Google+ Account
          p
            h1 User email
          p  
            ul
              li
                select#MainEmail 
                br
                a#MainEmailSave Save email
      p
        h1 User JSON:
      p
        a#hide Hide
        | /
        a#show Show
        pre#json-rendereruser
      p
        h1 Result JSON:
      p
        a#resultHide Hide
        | /
        a#resultShow Show
        pre#json-renderer
      br
    //include ./footer.jade
